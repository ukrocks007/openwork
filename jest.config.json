{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1",
    "^(\\.{1,2}/.*)\\.ts$": "$1"
  },
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": true,
      "tsconfig": {
        "module": "ESNext",
        "target": "ESNext"
      }
    }]
  },
  "testMatch": [
    "**/tests/**/*.test.ts"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "verbose": true,
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}